@model IEnumerable<SistemaRH.Models.Funcionario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tarefa)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empresa)
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.Tarefa) *@
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FuncionarioID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FuncionarioID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FuncionarioID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
